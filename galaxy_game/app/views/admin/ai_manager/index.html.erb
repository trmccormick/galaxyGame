<div class="ai-manager-dashboard">
  <div class="dashboard-header">
    <h1>ü§ñ AI Manager Dashboard</h1>
    <p class="dashboard-subtitle">Comprehensive AI system monitoring, mission control, and performance analytics</p>
  </div>

  <!-- System Status Overview -->
  <div class="status-overview">
    <h2>System Status</h2>
    <div class="status-cards">
      <div class="status-card">
        <div class="status-icon">üöÄ</div>
        <div class="status-content">
          <h3><%= @system_status[:active_missions] %></h3>
          <p>Active Missions</p>
        </div>
      </div>
      <div class="status-card">
        <div class="status-icon">‚úÖ</div>
        <div class="status-content">
          <h3><%= @system_status[:completed_missions] %></h3>
          <p>Completed Missions</p>
        </div>
      </div>
      <div class="status-card">
        <div class="status-icon">‚ùå</div>
        <div class="status-content">
          <h3><%= @system_status[:failed_missions] %></h3>
          <p>Failed Missions</p>
        </div>
      </div>
      <div class="status-card">
        <div class="status-icon">‚ö°</div>
        <div class="status-content">
          <h3><%= @performance_metrics[:success_rate] %>%</h3>
          <p>Success Rate</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="quick-actions">
    <h2>Quick Actions</h2>
    <div class="action-cards">
      <% @quick_actions.each do |key, action| %>
        <div class="action-card">
          <h3><%= action[:title] %></h3>
          <p><%= action[:description] %></p>
          <%= link_to 'Access', action[:path], class: 'action-button' %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- System Alerts -->
  <% if @system_alerts.any? %>
    <div class="system-alerts">
      <h2>System Alerts</h2>
      <div class="alerts-list">
        <% @system_alerts.each do |alert| %>
          <div class="alert alert-<%= alert[:type] %>">
            <div class="alert-content">
              <span class="alert-message"><%= alert[:message] %></span>
              <%= link_to alert[:action_text], alert[:action], class: 'alert-action' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Active Missions -->
  <div class="active-missions">
    <h2>Active Missions</h2>
    <% if @active_missions.any? %>
      <div class="missions-list">
        <% @active_missions.each do |mission| %>
          <div class="mission-card">
            <div class="mission-header">
              <h3><%= mission.identifier %></h3>
              <span class="mission-status status-<%= mission.status %>"><%= mission.status.humanize %></span>
            </div>
            <div class="mission-details">
              <p><strong>Settlement:</strong> <%= mission.settlement&.name || 'Unknown' %></p>
              <p><strong>Progress:</strong> <%= mission.progress %>%</p>
              <p><strong>Started:</strong> <%= mission.created_at.strftime('%Y-%m-%d %H:%M') %></p>
            </div>
            <div class="mission-actions">
              <%= link_to 'View Details', admin_ai_manager_mission_path(mission), class: 'mission-button' %>
              <%= link_to 'Advance Phase', admin_ai_manager_advance_phase_path(mission), method: :post, class: 'mission-button secondary' %>
            </div>
          </div>
        <% end %>
      </div>
      <%= link_to 'View All Missions', admin_ai_manager_missions_path, class: 'view-all-link' %>
    <% else %>
      <div class="no-missions">
        <p>No active missions at this time.</p>
        <%= link_to 'Plan New Mission', admin_ai_manager_planner_path, class: 'plan-mission-button' %>
      </div>
    <% end %>
  </div>

  <!-- Performance Metrics -->
  <div class="performance-metrics">
    <h2>Performance Metrics</h2>
    <div class="metrics-grid">
      <div class="metric-card">
        <h3><%= @performance_metrics[:success_rate] %>%</h3>
        <p>Mission Success Rate</p>
        <div class="metric-bar">
          <div class="metric-fill" style="width: <%= @performance_metrics[:success_rate] %>%"></div>
        </div>
      </div>
      <div class="metric-card">
        <h3><%= @performance_metrics[:average_timeline] %> days</h3>
        <p>Average Mission Timeline</p>
      </div>
      <div class="metric-card">
        <h3><%= @performance_metrics[:resource_efficiency] %>%</h3>
        <p>Resource Efficiency</p>
        <div class="metric-bar">
          <div class="metric-fill" style="width: <%= @performance_metrics[:resource_efficiency] %>%"></div>
        </div>
      </div>
    </div>
    <%= link_to 'View Detailed Performance', admin_ai_manager_performance_path, class: 'detailed-metrics-link' %>
  </div>

  <!-- AI Services Status -->
  <div class="ai-services-status">
    <h2>AI Services Status</h2>
    <div class="services-grid">
      <% @system_status[:ai_services_status].each do |service, status| %>
        <div class="service-card status-<%= status %>">
          <div class="service-icon">
            <%= status == :operational ? '‚úÖ' : '‚ùå' %>
          </div>
          <div class="service-info">
            <h4><%= service.to_s.humanize %></h4>
            <span class="service-status"><%= status.to_s.humanize %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

