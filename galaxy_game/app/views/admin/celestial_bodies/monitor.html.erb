        function deleteSphere(sphereId, sphereType) {
            logConsole(`Deleting ${sphereType}...`, 'warning');
            
            fetch(`/admin/celestial_bodies/${planetId}/spheres/${sphereId}`, {
                method: 'DELETE',
                headers: {
                    'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
