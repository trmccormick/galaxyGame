<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= form_authenticity_token %>">
    <title>Galaxy Game - Admin Control Center</title>
    <%= stylesheet_link_tag 'admin/monitor', media: 'all' %>
    <style>
        /* Dashboard-specific styles */
        .stat-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 10px;
            margin-bottom: 20px;
        }
        
        .stat-card {
            background: #1a1a1a;
            border: 1px solid #0f0;
            padding: 15px;
            text-align: center;
        }
        
        .stat-value {
            font-size: 32px;
            color: #0ff;
            font-weight: bold;
            margin: 10px 0;
        }
        
        .stat-label {
            font-size: 12px;
            color: #888;
            text-transform: uppercase;
        }
        
        .body-list {
            max-height: 400px;
            overflow-y: auto;
        }
        
        .body-item {
            background: #1a1a1a;
            border: 1px solid #333;
            padding: 10px;
            margin: 5px 0;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .body-item:hover {
            border-color: #0f0;
            background: #222;
        }
        
        .body-name {
            color: #0ff;
            font-weight: bold;
        }
        
        .body-type {
            color: #888;
            font-size: 11px;
        }
        
        .body-actions {
            display: flex;
            gap: 5px;
        }
        
        .action-btn {
            padding: 5px 10px;
            background: #222;
            border: 1px solid #0f0;
            color: #0f0;
            cursor: pointer;
            font-size: 10px;
            transition: all 0.2s;
        }
        
        .action-btn:hover {
            background: #0f0;
            color: #000;
        }
        
        .activity-log {
            max-height: 200px;
            overflow-y: auto;
            background: #0a0a0a;
            padding: 10px;
            border: 1px solid #333;
        }
        
        .activity-item {
            padding: 5px 0;
            border-bottom: 1px solid #1a1a1a;
            font-size: 11px;
        }
        
        .activity-time {
            color: #666;
            margin-right: 10px;
        }
        
        .activity-message {
            color: #0f0;
        }
        
        .activity-item.success .activity-message {
            color: #0ff;
        }
        
        .activity-item.error .activity-message {
            color: #f00;
        }
        
        .dashboard-grid {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 20px;
        }
        
        @media (max-width: 1024px) {
            .dashboard-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div id="mainContainer" style="grid-template-columns: 250px 1fr; grid-template-rows: 80px 1fr;">
        <!-- Header -->
        <div id="header" style="grid-column: 1 / -1;">
            <h1>GALAXY GAME - ADMIN CONTROL CENTER</h1>
            <div id="planetInfo">
                System Status: <span style="color: #0f0;">OPERATIONAL</span> | 
                Uptime: <%= @system_stats[:uptime] %> |
                Version: 1.0.0-alpha
            </div>
        </div>
        
        <!-- Left Panel: Admin Navigation -->
        <div id="toolPanel">
            <div class="tool-section">
                <h3>üéØ ADMIN SECTIONS</h3>
                <button class="tool-button" onclick="window.location.href='/admin/ai_manager/missions'">
                    ü§ñ AI Manager
                </button>
                <button class="tool-button" onclick="window.location.href='/admin/galaxies'">
                    üåå Galaxies
                </button>
                <button class="tool-button" onclick="window.location.href='/admin/solar_systems'">
                    ‚òÄÔ∏è Solar Systems
                </button>
                <button class="tool-button" onclick="window.location.href='/admin/celestial_bodies'">
                    üåç Celestial Bodies
                </button>
                <button class="tool-button" onclick="window.location.href='/admin/map_studio'">
                    üó∫Ô∏è AI Map Studio
                </button>
                <button class="tool-button" onclick="window.location.href='/admin/organizations'">
                    üè¢ Organization Monitor
                </button>
                <button class="tool-button" onclick="window.location.href='/admin/settlements'">
                    üèóÔ∏è Settlements
                </button>
                <button class="tool-button" onclick="window.location.href='/admin/resources'">
                    üí∞ Resources & Economy
                </button>
                <button class="tool-button" onclick="window.location.href='/admin/simulation'">
                    ‚öôÔ∏è Simulation Control
                </button>
            </div>
            
            <div class="tool-section">
                <h3>üéÆ QUICK ACTIONS</h3>
                <button class="tool-button" onclick="window.location.href='/'">
                    üè† Main Game
                </button>
                <button class="tool-button" onclick="window.location.href='/sidekiq'">
                    üìä Background Jobs
                </button>
                <button class="tool-button" onclick="refreshDashboard()">
                    üîÑ Refresh Dashboard
                </button>
            </div>
            
            <div class="tool-section">
                <h3>üß™ AI TESTING</h3>
                <button class="tool-button" onclick="window.location.href='/admin/map_studio/generate'">
                    üó∫Ô∏è Generate Planet Map
                </button>
                <button class="tool-button" onclick="runGlobalTest('resource_extraction')">
                    ‚õèÔ∏è Test Resource Extraction
                </button>
                <button class="tool-button" onclick="runGlobalTest('base_construction')">
                    üèóÔ∏è Test Base Construction
                </button>
                <button class="tool-button" onclick="runGlobalTest('isru_pipeline')">
                    üè≠ Test ISRU Pipeline
                </button>
                <button class="tool-button" onclick="runGlobalTest('multi_mission')">
                    üöÄ Test Multi-Mission
                </button>
            </div>
            
            <div class="tool-section">
                <h3>üìÅ DATA MANAGEMENT</h3>
                <button class="tool-button" onclick="alert('Export feature coming soon')">
                    üíæ Export Data
                </button>
                <button class="tool-button" onclick="alert('Import feature coming soon')">
                    üì• Import Data
                </button>
                <button class="tool-button" onclick="alert('Backup feature coming soon')">
                    üíø Backup Database
                </button>
            </div>
        </div>
        
        <!-- Main Content Area -->
        <div style="padding: 20px; overflow-y: auto; background: #0a0a0a;">
            <!-- System Stats -->
            <div class="tool-section">
                <h3>üìä SYSTEM STATISTICS</h3>
                <div class="stat-grid">
                    <div class="stat-card">
                        <div class="stat-label">Solar Systems</div>
                        <div class="stat-value"><%= @system_stats[:total_systems] %></div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Celestial Bodies</div>
                        <div class="stat-value"><%= @system_stats[:total_bodies] %></div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Habitable Worlds</div>
                        <div class="stat-value"><%= @system_stats[:habitable_bodies] %></div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Active Simulations</div>
                        <div class="stat-value"><%= @system_stats[:active_simulations] %></div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">AI Missions</div>
                        <div class="stat-value"><%= @system_stats[:ai_missions_running] %></div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">GCC Generation</div>
                        <div class="stat-value" style="font-size: 18px;"><%= @system_stats[:gcc_generation] %></div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">AI Status</div>
                        <div class="stat-value" style="font-size: 18px;"><%= @system_stats[:ai_status] %></div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Economic Autonomy</div>
                        <div class="stat-value" style="font-size: 18px;"><%= @system_stats[:economic_autonomy] %></div>
                    </div>
                </div>
            </div>
            
            <!-- AI Manager Status -->
            <div class="tool-section">
                <h3>ü§ñ AI MANAGER STATUS</h3>
                <div class="stat-grid">
                    <div class="stat-card">
                        <div class="stat-label">Manager Status</div>
                        <div class="stat-value" style="font-size: 18px; color: <%= @ai_status[:manager_status] == 'online' ? '#0f0' : '#f00' %>;">
                            <%= @ai_status[:manager_status].upcase %>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Bootstrap Capable</div>
                        <div class="stat-value" style="font-size: 18px; color: <%= @ai_status[:bootstrap_capable] ? '#0f0' : '#f00' %>;">
                            <%= @ai_status[:bootstrap_capable] ? 'YES' : 'NO' %>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Learned Patterns</div>
                        <div class="stat-value"><%= @ai_status[:learned_patterns] %></div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Last Decision</div>
                        <div class="stat-value" style="font-size: 14px;">
                            <%= time_ago_in_words(@ai_status[:last_decision]) %> ago
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Economic Indicators -->
            <div class="tool-section">
                <h3>üí∞ ECONOMIC INDICATORS</h3>
                <div class="stat-grid">
                    <div class="stat-card">
                        <div class="stat-label">Total GCC</div>
                        <div class="stat-value"><%= number_with_precision(@economic_indicators[:total_gcc], precision: 2) %></div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">USD Balance</div>
                        <div class="stat-value">$<%= number_with_delimiter(@economic_indicators[:usd_balance]) %></div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Active Trades</div>
                        <div class="stat-value"><%= @economic_indicators[:active_trades] %></div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Bootstrap Progress</div>
                        <div class="stat-value"><%= @economic_indicators[:bootstrap_progress] %>%</div>
                    </div>
                </div>
            </div>
            
            <div class="dashboard-grid">
                <!-- Celestial Bodies List -->
                <div class="tool-section">
                    <h3>üåç CELESTIAL BODIES</h3>
                    <div class="body-list">
                        <% @celestial_bodies.each do |body| %>
                            <div class="body-item">
                                <div>
                                    <div class="body-name"><%= body.name %></div>
                                    <div class="body-type">
                                        <%= body.solar_system&.name || 'Unknown System' %> | 
                                        <%= body.type || 'Unknown Type' %> |
                                        <%= number_with_precision(body.surface_temperature, precision: 1) %>K
                                    </div>
                                </div>
                                <div class="body-actions">
                                    <button class="action-btn" onclick="window.location.href='/celestial_bodies/<%= body.id %>'">
                                        View
                                    </button>
                                    <button class="action-btn" onclick="window.location.href='/admin/celestial_bodies/<%= body.id %>/monitor'">
                                        Monitor
                                    </button>
                                </div>
                            </div>
                        <% end %>
                        
                        <% if @celestial_bodies.empty? %>
                            <div style="text-align: center; padding: 40px; color: #666;">
                                No celestial bodies found.<br>
                                <button class="tool-button" style="margin-top: 20px;" onclick="window.location.href='/simulation'">
                                    Initialize Simulation
                                </button>
                            </div>
                        <% end %>
                    </div>
                </div>
                
                <!-- Recent Activity -->
                <div class="tool-section">
                    <h3>üìú RECENT ACTIVITY</h3>
                    <div class="activity-log">
                        <% @recent_activity.each do |activity| %>
                            <div class="activity-item <%= activity[:level] %>">
                                <span class="activity-time">
                                    <%= time_ago_in_words(activity[:timestamp]) %> ago
                                </span>
                                <span class="activity-message">
                                    [<%= activity[:type].upcase %>] <%= activity[:message] %>
                                </span>
                            </div>
                        <% end %>
                    </div>
                </div>
                
                <!-- AI Activity Feed -->
                <div class="tool-section">
                    <h3>üß† AI ACTIVITY FEED</h3>
                    <div class="activity-log">
                        <% @ai_activity_feed.each do |activity| %>
                            <div class="activity-item <%= activity[:level] %>">
                                <span class="activity-time">
                                    <%= time_ago_in_words(activity[:timestamp]) %> ago
                                </span>
                                <span class="activity-message">
                                    [<%= activity[:type].upcase %>] <%= activity[:message] %>
                                </span>
                                <% if activity[:details] %>
                                    <div style="margin-top: 5px; font-size: 10px; color: #666;">
                                        <%= activity[:details] %>
                                    </div>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                    
                    <!-- AI Testing Controls -->
                    <div style="margin-top: 15px; padding-top: 15px; border-top: 1px solid #333;">
                        <h4 style="margin: 0 0 10px 0; color: #0ff;">AI BOOTSTRAP TESTING</h4>
                        <button class="tool-button" onclick="runGccBootstrapTest()" style="width: 100%; margin-bottom: 5px;">
                            üöÄ Test GCC Bootstrap
                        </button>
                        <button class="tool-button" onclick="runAiAnalysis()" style="width: 100%; margin-bottom: 5px;">
                            üîç Run AI System Analysis
                        </button>
                        <button class="tool-button" onclick="clearAiActivity()" style="width: 100%;">
                            üóëÔ∏è Clear Activity Feed
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function refreshDashboard() {
            window.location.reload();
        }
        
        function runGlobalTest(testType) {
            // For now, just show an alert. Later, this could run tests across multiple bodies
            alert(`Global ${testType} test not yet implemented.\n\nPlease use individual body monitors for AI testing.`);
        }
        
        function runGccBootstrapTest() {
            if (confirm('Run GCC Bootstrap Test?\n\nThis will test the AI Manager\'s ability to autonomously deploy a mining satellite to bootstrap cryptocurrency generation.')) {
                // For now, redirect to a celestial body monitor. Later, this could run globally
                const earthBody = <%= @celestial_bodies.find { |b| b.name == 'Earth' }&.id || @celestial_bodies.first&.id %>;
                if (earthBody) {
                    window.location.href = `/admin/celestial_bodies/${earthBody}/monitor`;
                } else {
                    alert('No celestial bodies available for testing. Please initialize the simulation first.');
                }
            }
        }
        
        function runAiAnalysis() {
            alert('AI System Analysis\n\nThis feature will analyze the current state of the AI Manager and provide recommendations for bootstrap actions.\n\nFeature coming soon!');
        }
        
        function clearAiActivity() {
            if (confirm('Clear AI Activity Feed?\n\nThis will remove all AI activity entries from the dashboard.')) {
                // TODO: Implement actual clearing functionality
                alert('AI Activity Feed cleared (simulation).');
                location.reload();
            }
        }
        
        // Auto-refresh stats every 30 seconds
        setInterval(() => {
            fetch('/admin/dashboard')
                .then(response => response.text())
                .then(html => {
                    // Just log for now - full implementation would update stats without page reload
                    console.log('Dashboard stats refreshed');
                })
                .catch(error => console.error('Refresh failed:', error));
        }, 30000);
    </script>
</body>
</html>
